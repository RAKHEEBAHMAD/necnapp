<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin-login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            background: linear-gradient(to bottom, #3498db, #ffffff);
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        button {
            background: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        #submit {
            width: 100%;
            height: 40px;
            border: none;
            color: white;
            border-radius: 5px;
            background: #3498db;
        }

        #submit:hover {
            width: 100%;
            background: #2777ac;
        }

        .red {
            margin-bottom: 10px;
            color: red;
        }

        .account a {
            text-decoration: none;
            margin-top: 10px;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;

        }

        .show-checkbox {
            gap: 5px;
            display: flex;
            align-items: center;
            font-size: 15px;
        }

        /* back button */
        #backButtonContainer {
            position: fixed;
            top: 10px;
            /* Adjust the top distance as needed */
            left: 10px;
            /* Adjust the left distance as needed */
        }

        #goBack {
            text-decoration: none;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
    <script src="https://kit.fontawesome.com/a894369998.js" crossorigin="anonymous"></script>
</head>

<body>

    <div class="container">
        <div id="backButtonContainer">
            <i class="fa fa-arrow-left" aria-hidden="true" style="color: white;"></i>
            <a href="#" id="goBack">Back</a>
        </div>
        <form action="/adminlogin" method="post">
            <h1>Log in</h1>
            <p class="red" id="msg"></p>
            <input type="text" name="Admin" id="adminid" placeholder="Enter Admin ID" required>
            <input type="password" name="password" id="password" placeholder="Enter Password">
            <div class="show-checkbox">
                <input type="checkbox" name="show" id="show" onclick="showpassword()">
                <p>Show password</p>
            </div>
            </br>
            <input type="submit" id="submit" value="Log in">
            <div class="account"><a href="/admin-page" target="_self">Don't Have an Account?</a></div>

        </form>
    </div>
    <script>
        const pass = document.getElementById('password');


        function showpassword() {
            const showpass = document.getElementById('password')

            if (showpass.type == 'password') {
                showpass.type = 'text'

            } else {
                showpass.type = 'password'

            }
        }

        document.getElementById('goBack').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the default link behavior
            window.history.back(); // Go back in the browser's history
        });







    </script>
</body>

</html>