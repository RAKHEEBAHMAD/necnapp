<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to bottom, #3498db, #51a1f7);
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }

    .container {
      display: flex;
      margin: 20px;
      gap: 20px;
    }

    .left-container {
      flex: 30%;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .profile-container {
      flex: 40%;
    }

    .events-container {
      flex: 60%;
    }

    .right-container {
      flex: 70%;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .above-right-container {
      flex: 40%;
      background-color: #ffffff;
     
      padding: 20px;
      border-radius: 5px;
      text-align: center;
    }

    .below-right-container {
      flex: 60%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .container-card {
      background-color: #f8f8f8;
    
      padding: 20px;
      border-radius: 5px;
    }

    .profile-card, .events-card {
      text-align: center;
    }

    .child-card {
      width: calc(33.33% - 20px);
      height: 150px;
      background-color: #eee8e8; 
      
      border-radius: 5px;
      display: flex;
      color: rgb(67, 63, 63);
      align-items: center;
      justify-content: center;
      cursor: pointer;
      text-align: center; 
      text-decoration: none;
      

    }

    .child-card img {
      max-width: 47px;
      max-height: 47px;
      display: block; 
      margin: 0 auto;
    }

    .child-card h2 {
      font-size: 14px;
      margin: 10px 0;
    }

    .child-card:nth-child(1) {
      background-color: #f3447e;
    }

    .child-card:nth-child(2) {
      background-color: #f01717;
    }

    .child-card:nth-child(3) {
      background-color: #dc4af3;
    }

    .child-card:nth-child(4) {
      background-color: #f0ff4a;
    }

    .child-card:nth-child(5) {
      background-color: #ef3f51;
    }

    .child-card:nth-child(6) {
      background-color: #77f65d;
    }

    .child-card:nth-child(8) {
      background-color: #4964ee;
    }

    .child-card:nth-child(7) {
      background-color: #f8a03b;
    }

    .child-card:hover {
      transform: scale(1.05);
    }

    .profile-stats {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .stat-item {
      text-align: center;
      display: flex;
      gap: 18px;
      flex-direction: column;
    }

    .stat-heading {
      font-size: 13px;
    }

    .stat-number {
      font-weight: bold;
      font-size: 25px;
    }

    /* Media Query for smaller screens */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }

      .left-container,
      .right-container {
        flex: 100%;
      }

      .above-right-container {
        order: 2; 
      }

      .below-right-container {
        order: 3; 
      }

      .child-card {
        width: calc(50% - 20px); 
        height: 100px; 
      }
      .events-container {
    display: none;
  }
    }

