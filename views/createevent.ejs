<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            background: linear-gradient(to bottom, #3498db, #ffffff);
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="date"],
        input[type="file"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        button {
            background: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        #submit {
            width: 100%;
            height: 40px;
            border: none;
            color: white;
            border-radius: 5px;
            background: #3498db;
        }

        #submit:hover {
            width: 100%;
            background: #2777ac;
        }

        .red {
            margin-bottom: 10px;
            color: red;
        }

        .account a {
            text-decoration: none;
            margin-top: 10px;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .otp {
            display: flex;
            width: 100%;
        }

        .otpinput {
            width: 80%;
        }

        .otpbtn {
            background: #3498db;
            color: #fff;
            border: none;
            padding: 5px;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 5px;
            width: 20%;
            height: 35px;
        }

        .otpbtn:hover {
            background: #2777ac;
        }

        .show-checkbox {
            gap: 5px;
            display: flex;
            align-items: center;
            font-size: 15px;
        }

        /* back button */
        #backButtonContainer {
            position: fixed;
            top: 10px;
            left: 10px;
        }

        #goBack {
            text-decoration: none;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
    <script src="https://kit.fontawesome.com/a894369998.js" crossorigin="anonymous"></script>  
</head>
<body>
    <div class="container">
        <div id="backButtonContainer">
            <i class="fa fa-arrow-left" aria-hidden="true" style="color: white;"></i>
            <a href="#" id="goBack">Back</a>
        </div>
        <form action="/create-event" method="post">
            <h1>Create Event</h1>
            <p class="red" id="msg"></p>

            <input type="text" name="eventName" id="eventName" placeholder="Event Name" required>
            <input type="text" name="eventOrganizedBy" id="eventOrganizedBy" placeholder="Organized By" required>
            <input type="date" name="eventDate" id="eventDate" required>

            <label for="eventPoster">Event Poster (Image):</label>
            <input type="file" name="eventPoster" id="eventPoster" accept="image/*" required>

            <input type="text" name="inchargeName" id="inchargeName" placeholder="Incharge Name" required>
            <input type="text" name="registrationLink" id="registrationLink" placeholder="Registration Link" required>

            <input type="submit" id="submit" value="Create Event">
        </form>
    </div>
    <script>
        document.getElementById('goBack').addEventListener('click', function (e) {
            e.preventDefault(); 
            window.history.back(); 
        });
    </script>
</body>
</html>
